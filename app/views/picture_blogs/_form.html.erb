<%= form_with(model: @picture_blog, local: true, url: choose_new_or_edit) do |f| %>
  <% if @picture_blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture_blog.errors.count %> 件のエラーがあります。</h2>
      <ul>
      <% @picture_blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "タイトル" %>
    <%= f.text_field :title %><br>
    <%= f.label "本文" %>
    <%= f.text_field :content %><br>
    <%= f.label "画像" %>
    <% if @picture_blog.image.url  %>
      <%= image_tag(@picture_blog.image.url) if @picture_blog.image && @picture_blog.image.url %>
    <% end %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %><br><br>
    <%= f.submit "投稿！"%><br><br>
  </div>
<% end %>