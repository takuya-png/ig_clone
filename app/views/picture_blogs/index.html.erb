<div class="users_h1_box"><h1>投稿一覧</h1></div>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>タイトル</th>
      <th>本文</th>
      <th>画像</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @picture_blog.each do |picture_blog| %>
      <tr>
        <td><%= picture_blog.user.name %></td>
        <td><%= picture_blog.title %></td>
        <td><%= picture_blog.content %></td>
        <td><%= picture_blog.image %></td>
        <td><%= link_to '詳細', picture_blog %></td>
        <% if picture_blog.user.id == current_user.id %>
          <td><%= link_to '編集', edit_picture_blog_path(picture_blog) %></td>
          <td><%= link_to '削除', picture_blog, method: :delete, data: { confirm: '本当に消してもいいですか？' } %></td>
        <% end %>          
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿画面へ', new_picture_blog_path %>