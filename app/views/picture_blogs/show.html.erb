<div class="users_h1_box"><h1>詳細画面</h1></div>
<p id="notice"><%= notice %></p>
<p>
  <% unless @picture_blog.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(picture_blog_id: @picture_blog.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</p>
<p>
  <strong>投稿者:</strong><%= @picture_blog.user.name %>
</p>
<p>
  <strong>タイトル:</strong><%= @picture_blog.title %>
</p>
<p>
  <strong>本文:</strong><%= @picture_blog.content %>
</p>
<% if @picture_blog.image.url  %>
  <p>
    <strong>イメージ:</strong>
    <%= image_tag @picture_blog.image.url %>
  </p>
<% end %>
<%= link_to '戻る', picture_blogs_path %>