<h1>確認画面</h1>
<%= form_with(model: @picture_blog, url: picture_blogs_path, local: true) do |f| %>
  <%= f.hidden_field :title %>
  <p>タイトル：<%= @picture_blog.title %></p>
  <%= f.hidden_field :content %>
  <p>本文：<%= @picture_blog.content %></p>
  <%= image_tag(@picture_blog.image.url) if @picture_blog.image && @picture_blog.image.url %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit "投稿する" %>
<% end %>
<%= form_with(model:@picture_blog, url:new_picture_blog_path, local:true, method:"get") do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit "戻る", name: "back" %>
<% end %>